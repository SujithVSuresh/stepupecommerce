<div class="colorlib-product">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
        <h2>New Arrivals</h2>
      </div>
    </div>
    <div class="row row-pb-md">

          <% newArrivals.forEach((item) => { %>
            
            <div class="col-lg-4 mb-4 text-center">
              <div class="product-entry border">
                  <a href="/shop/items/<%= item._id %>" class="prod-img">
                      <img src="/static/images/<%= item.varient[0].images[0] %>" class="img-fluid" alt="Free html5 bootstrap 4 template">
                  </a>
                  <div class="desc">
                      <h2>
                          <a href="/shop/items/<%= item._id %>">
                              <%= item.modelName %> <%= item.category.categoryName %> for <%= item.gender %>
                          </a>
                      </h2>
                  </div>
              </div>
          </div>
          
          
        <% }) %>      


    
    </div>
    <div class="row">
      <div class="col-md-12 text-center">
        <p><a href="/shop" style="background-color: #4f2f2d;" class="btn btn-primary btn-lg">Shop All Products</a></p>
      </div>
    </div>
  </div>
</div>

