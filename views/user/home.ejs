<%- include('./header', {isLogin: isLogin, cartCount}) %>
<aside id="colorlib-hero">
  <div class="flexslider">
    <ul class="slides">
      <% if(categoryOffers.length > 0){ %>
      <% categoryOffers.forEach((item) => { %>
      <li style="background-image: url(/static/user/images/pexels-nandu-vasudevan-167142178-10939830.jpg)">
        <div class="overlay"></div>
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-6 offset-sm-3 text-center slider-text">
              <div class="slider-text-inner">
                <div class="desc">
                  <h1 class="head-1"><%= item.categoryId.categoryName %></h1>
                  <!-- <h2 class="head-2">Arrival</h2> -->
                  <h2 class="head-3">
                    up to <strong class="font-weight-bold"><%= item.percentage %>%</strong> off
                  </h2>
                  <p class="category"><span></span></p>
                  <p><a href="/shop" class="btn btn-primary" style="background-color: #4f2f2d;">Shop Collection</a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
      <% }) %>
      <% }else{ %>
        <li style="background-image: url(/static/user/images/pexels-nandu-vasudevan-167142178-10939830.jpg)">
          <div class="overlay"></div>
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-6 offset-sm-3 text-center slider-text">
                <div class="slider-text-inner">
                  <div class="desc">
                    <h1 class="head-1">Step Up</h1>
                    <!-- <h2 class="head-2">Arrival</h2> -->
                    <h2 class="head-3">
                      <strong class="font-weight-bold">Your Style with Our Shoe Collection</strong>
                    </h2>
                    <p class="category"><span></span></p>
                    <p><a href="/shop" class="btn btn-primary" style="background-color: #4f2f2d;">Shop Collection</a></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      <% } %>
    </ul>
  </div>
</aside>
